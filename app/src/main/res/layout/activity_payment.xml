<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linearData">

        <include
            layout="@layout/toolbardesign" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            app:cardMaxElevation="6dp"
            app:contentPadding="5dp"
            android:layout_margin="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/r1"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:layout_gravity="center">
                <RelativeLayout
                    android:id="@+id/nameView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:id="@+id/name"
                        android:textColor="@color/black"
                        android:text="Chetan G"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/merriweather_black"/>

                    <ImageView
                        android:id="@+id/editAddress"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"

                        android:layout_marginTop="19dp"
                        android:layout_marginEnd="0dp"
                        android:src="@drawable/ic_baseline_edit_24" />

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nameView"
                    android:layout_marginTop="20dp"
                    android:id="@+id/address"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/address1"
                        android:textColor="#696969"
                        android:text="123, Sample Street,"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        android:fontFamily="@font/robotoslab_variablefont_wght"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/address2"
                        android:textColor="#696969"
                        android:text="Eastern Street,"
                        android:layout_marginLeft="8dp"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        android:fontFamily="@font/robotoslab_variablefont_wght"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/address"
                    android:id="@+id/landmark"
                    android:textColor="#696969"
                    android:text="Near Sample Landmark,"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:fontFamily="@font/robotoslab_variablefont_wght"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/landmark"
                    android:id="@+id/add"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/address3"
                        android:textColor="#696969"
                        android:text="Sample City,"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        android:fontFamily="@font/robotoslab_variablefont_wght"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/city"
                        android:textColor="#696969"
                        android:text="Kanyakumari,"
                        android:layout_marginLeft="8dp"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        android:fontFamily="@font/robotoslab_variablefont_wght"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/add"
                    android:id="@+id/state"
                    android:textColor="#696969"
                    android:text="Tamilnadu."
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:fontFamily="@font/robotoslab_variablefont_wght"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/state"
                    android:id="@+id/pincode"
                    android:textColor="#696969"
                    android:text="123 456"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:fontFamily="@font/robotoslab_variablefont_wght"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pincode"
                    android:id="@+id/phone"
                    android:layout_marginTop="10dp"
                    android:textColor="#696969"
                    android:text="+91-9876543210"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/robotoslab_variablefont_wght"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rview"
            android:layout_width="match_parent"
            android:layout_height="310dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/linearData"
        android:layout_alignParentBottom="true"
        android:weightSum="2"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Amount to be paid : "
                android:textSize="18sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:backgroundTint="@android:color/darker_gray"
                android:gravity="start|center"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/cartAmount"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:text="500"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30sp"
                android:gravity="end"
                android:layout_marginEnd="10dp"
                android:layout_gravity="end"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:weightSum="1"
            android:orientation="horizontal">


            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:id="@+id/payment"
                android:text="Make Payment"
                android:backgroundTint="#517b0c"
                android:layout_marginEnd="10dp"
                android:textSize="20sp"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>