<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="0dp">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp"
        card_view:cardMaxElevation="6dp"
        card_view:contentPadding="5dp"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/r1"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:textColor="@color/black"
                android:text="Chetan G"
                android:textSize="25sp"
                android:textStyle="bold"
                android:fontFamily="@font/merriweather_black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginTop="20dp"
                android:id="@+id/address"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/address1"
                    android:textColor="#696969"
                    android:text="123, Sample Street,"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:fontFamily="@font/robotoslab_variablefont_wght"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/address2"
                    android:textColor="#696969"
                    android:text="Eastern Street,"
                    android:layout_marginLeft="8dp"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:fontFamily="@font/robotoslab_variablefont_wght"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/address"
                android:id="@+id/landmark"
                android:textColor="#696969"
                android:text="Near Sample Landmark,"
                android:textSize="18sp"
                android:textStyle="italic"
                android:fontFamily="@font/robotoslab_variablefont_wght"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/landmark"
                android:id="@+id/add"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/address3"
                    android:textColor="#696969"
                    android:text="Sample City,"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:fontFamily="@font/robotoslab_variablefont_wght"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/city"
                    android:textColor="#696969"
                    android:text="Kanyakumari,"
                    android:layout_marginLeft="8dp"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:fontFamily="@font/robotoslab_variablefont_wght"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/add"
                android:id="@+id/state"
                android:textColor="#696969"
                android:text="Tamilnadu."
                android:textSize="18sp"
                android:textStyle="italic"
                android:fontFamily="@font/robotoslab_variablefont_wght"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/state"
                android:id="@+id/pincode"
                android:textColor="#696969"
                android:text="123 456"
                android:textSize="18sp"
                android:textStyle="italic"
                android:fontFamily="@font/robotoslab_variablefont_wght"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pincode"
                android:id="@+id/phone"
                android:layout_marginTop="10dp"
                android:textColor="#696969"
                android:text="+91-9876543210"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/robotoslab_variablefont_wght"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>