<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/bb"
    tools:context=".AppointmentActivity">

    <include
        layout="@layout/toolbar1"
        android:id="@+id/tool2"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tool2"
        android:layout_marginTop="20dp"
        android:id="@+id/head1"
        android:text="Book Your Appointment"
        android:textSize="50sp"
        android:gravity="center"
        android:textColor="#254117"
        android:fontFamily="@font/acme_regular"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head1"
        android:text="Welcome to Cropfit Appointment Booking. To book your appointment please enter the following details to get the contact details."
        android:layout_marginTop="10dp"
        android:id="@+id/head2"
        android:textAlignment="center"
        android:textSize="15sp"
        android:fontFamily="@font/robotoslab_variablefont_wght"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/textView_indian_states"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/head2"
        android:layout_marginTop="30dp"
        android:padding="6dp"
        android:text="@string/state"
        android:textColor="#555555"
        android:focusable="true"
        android:focusableInTouchMode="true"/>

    <Spinner
        android:id="@+id/spinner_indian_states"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/textView_indian_states"/>

    <TextView
        android:id="@+id/textView_indian_districts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner_indian_states"
        android:layout_marginTop="30dp"
        android:padding="6dp"
        android:text="@string/district"
        android:textColor="#555555"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <Spinner
        android:id="@+id/spinner_indian_districts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/textView_indian_districts"/>

    <Button
        android:id="@+id/button_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner_indian_districts"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="@string/submit"
        android:textAlignment="center" />



</RelativeLayout>